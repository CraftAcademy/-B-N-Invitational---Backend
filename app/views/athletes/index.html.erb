<%= link_to 'Create Athlete', new_athlete_path %>

<h3></h3>
<% if @sorted_results %>
  <% position = 1 %>
  <% @sorted_results.each do |result| %>
    <% if result.valid_score == true %>
      <p>
      No. <%= position %>
      <%= result.athlete.name %>
      Score: <%= result.score %>, 
       Number of votes: <%= result.number_of_votes %>
      </p>
      <% position += 1 %>
    <% end %>
  <% end %>
<% end %>

<% if @sorted_results %>
  <% @sorted_results.each do |result| %>
    <% if result.valid_score == false %>
      <p>
      Not Valid:
      <%= result.athlete.name %>
      Score: <%= result.score %>,
       Number of votes: <%= result.number_of_votes %>
      </p>
    <% end %>
  <% end %>
<% end %>
