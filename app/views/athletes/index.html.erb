<%= link_to 'Create Athlete', new_athlete_path %>

<h3>Results</h3>

<% if @sorted_results %>
  <% position = 1 %>
  <% @sorted_results.each do |result| %>
    <% if result.validscore == true %>
      <p>
      No. <%= position %>
      <%= result.athlete.name %>
      Score: <%= result.score %>,
      Number of votes: <%= result.numberofvotes %>
      </p>
      <% position += 1 %>
    <% end %>
  <% end %>
<% end %>

<h3>Insufficient votes</h3>

<% if @sorted_results %>
  <% @sorted_results.each do |result| %>
    <% if result.validscore == false %>
      <p>
      <%= result.athlete.name %>
      Score: <%= result.score %>,
       Number of votes: <%= result.numberofvotes %>
      </p>
    <% end %>
  <% end %>
<% end %>
